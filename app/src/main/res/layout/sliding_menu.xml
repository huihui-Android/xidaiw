<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="93dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/avanta"/>
                <RelativeLayout
                    android:id="@+id/rl_help"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="45dp"
                    android:orientation="horizontal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/help_slide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用帮助"/>
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jt_slide"/>
                </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_width="150dp"
                android:layout_height="0.1dp"
                android:background="@color/gray1"
                />
        <RelativeLayout
            android:id="@+id/rl_yjfk"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/yjfk_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"/>
            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jt_slide"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_width="150dp"
            android:layout_height="0.1dp"
            android:background="@color/gray1"
            />
        <RelativeLayout
            android:id="@+id/rl_aboutus"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/aboutus_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"/>
            <ImageView
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jt_slide"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_width="150dp"
            android:layout_height="0.1dp"
            android:background="@color/gray1"
            />
        <RelativeLayout
            android:id="@+id/rl_clearcache"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <TextView
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/clearcache_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缓存清理"/>
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_cache"
                android:textSize="11sp"
                android:maxLines="1"
                android:textColor="@color/gray1"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5MB"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_width="150dp"
            android:layout_height="0.1dp"
            android:background="@color/gray1"
            />
            <TextView
                android:id="@+id/tv_logout"
                android:textSize="@dimen/title"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:textColor="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安全退出 >"/>
        </LinearLayout>

    </LinearLayout>