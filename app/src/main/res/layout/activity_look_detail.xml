                        android:id="@+id/tv_total_withdraw"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:textColor="@color/black2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
