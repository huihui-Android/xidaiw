    <include layout="@layout/header"/>
    <RelativeLayout
        android:background="@color/graygray"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:drawablePadding="5dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请确保身份信息真实有效"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_realName"
            android:textColor="@color/black3"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"/>
        <EditText
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="15sp"
            android:textColorHint="@color/gray1"
            android:hint="请输入真实姓名"
            android:id="@+id/et_realName"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_realName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/graygray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_cardNum"
            android:textColor="@color/black3"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"/>
        <EditText
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="15sp"
            android:textColorHint="@color/gray1"
            android:hint="请输入身份证号"
            android:id="@+id/et_cardNum"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_cardNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/graygray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_certificate"
            android:layout_marginTop="40dp"
            android:text="确定"
            android:enabled="false"
            android:textSize="@dimen/title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:background="@drawable/certificate_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
