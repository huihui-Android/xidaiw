<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_help_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/header"/>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_customer_1"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="25dp"
                android:src="@mipmap/customer_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="在线客服"
                    android:textSize="15sp"
                    android:textColor="#535353"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="12dp"
                    android:text="一对一专属服务"
                    android:textSize="12sp"
                    android:textColor="#a0a0a0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@mipmap/line"/>
        <LinearLayout
            android:id="@+id/ll_customer_2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/customer_service2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColorHighlight="#535353"
                    android:text="电话客服"
                    android:textSize="15sp"
                    android:textColor="#535353"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="一对一专属服务"
                    android:textSize="12sp"
                    android:textColor="#a0a0a0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="13sp"
        android:textColor="#707070"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="常见问题"/>
    <android.support.v7.widget.SearchView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/search_view_stroke_bg"
        android:queryHint="搜索"
        android:layout_height="35dp"
        android:id="@+id/searchView">
    </android.support.v7.widget.SearchView>
    <RelativeLayout
        android:id="@+id/rl_question_1"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:textColor="#535353"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行存管上线以后对我们的资金有什么影响?"/>
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_question_2"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:textColor="#535353"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何开通银行存管账户?"/>
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_question_3"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:textColor="#535353"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为什么要进行安全认证?"/>
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_right"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e5e5e5"/>
    <LinearLayout
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_user"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#898989"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_invest"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/invest"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#898989"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投资"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_recharge"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/recharge"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#898989"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_withdraw"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/withdraw"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#898989"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_box"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/box"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#898989"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝箱"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bank"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bank"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#898989"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行存管"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
