<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="308dp">
                <xidaiw.widget.AutoScrollViewPager
                    android:id="@+id/asvp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </xidaiw.widget.AutoScrollViewPager>
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/ll_newhand_invite_msg_sigin"
                    android:id="@+id/ll_dot"
                    android:paddingBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_newhand_invite_msg_sigin"
                    android:layout_above="@+id/ll_static_data"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/index_top_shape"
                    android:clickable="true"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="7dp">
                        <ImageView
                            android:id="@+id/iv_newhandGuide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/guide_index" />
                        <ImageView
                            android:id="@+id/iv_invite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/invite_index" />
                        <ImageView
                            android:id="@+id/iv_messageCenter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/message_index" />
                        <ImageView
                            android:id="@+id/iv_sigin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/signin" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="新人引导"
                            android:textAlignment="center"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/ps" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="邀请有礼"
                            android:textAlignment="center"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/ps" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="消息中心"
                            android:textAlignment="center"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/ps" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="签到"
                            android:textAlignment="center"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/ps" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_static_data"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="12sp"
                            android:textColor="#535353"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="交易总额"/>
                        <TextView
                            android:id="@+id/tv_Transaction_amount"
                            android:paddingTop="10dp"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3544,555.0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="12sp"
                            android:textColor="#535353"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待收金额"/>
                        <TextView
                            android:id="@+id/tv_unpay_capital"
                            android:paddingTop="10dp"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="31544,555.0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="12sp"
                            android:textColor="#535353"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="安全运营"/>
                        <TextView
                            android:id="@+id/tv_safe_manage"
                            android:paddingTop="10dp"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="266天"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>




            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/index_shape"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/newperson" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="30dp"
                    android:text="新手专享"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/x1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/textview_red_shape"
                        android:text="新手专享"
                        android:textColor="@color/primary"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/textview_shape"
                        android:text="累计限额3万"
                        android:textColor="#f66d13"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_shape"
                        android:text="限投一次"
                        android:textColor="#f66d13"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_newhand_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14.00"
                        android:textColor="@color/primary"
                        android:textSize="50sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="@color/primary"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="43dp"
                    android:layout_marginRight="43dp"
                    android:layout_marginTop="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_newhand_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3个月"
                        android:textSize="@dimen/ps" />

                    <TextView
                        android:id="@+id/tv_newhand_remain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="剩余66.88万元"
                        android:textSize="@dimen/ps" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="100元起投"
                        android:textSize="@dimen/ps" />
                </LinearLayout>
                <Button
                    android:id="@+id/btn_buy_newhand"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="43dp"
                    android:layout_marginRight="43dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:background="@drawable/btn_shape"
                    android:text="立即抢购"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_recommend_bid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#f2f2f2"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:src="@mipmap/jx" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:text="快速投资"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/ps" />
                </LinearLayout>
                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:text="[深圳]丰田皇冠抵押借款" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="18dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/productInterest1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/head" />

                                <TextView
                                    android:id="@+id/productInterest2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=".8%"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/ps" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/productLimit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="180天"
                                android:textColor="@color/black2"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="预期年化"
                                android:textColor="@color/gray1"
                                android:textSize="11sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="项目期限"
                                android:textColor="@color/gray1"
                                android:textSize="11sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_buyNow"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="100dp"
                        android:layout_height="37dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/btn_buy_shape"
                        android:text="抢购"
                        android:textColor="@color/primary"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:src="@mipmap/fdj" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="严格甄选\n优质产品"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/ps" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:src="@mipmap/ys" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="十层风控\n十道审核"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/ps" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:src="@mipmap/ax" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="贴心服务\n便捷操作"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/ps" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
