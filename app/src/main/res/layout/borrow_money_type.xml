<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/borrow_money_type_shape"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:id="@+id/tv_borrow_money_type_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#898989"
            android:text="车辆抵押贷款"/>
        <TextView
            android:padding="5dp"
            android:id="@+id/tv_borrow_money_type_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#898989"
            android:text="企事业公务员信用贷款"/>
        <TextView
            android:padding="5dp"
            android:id="@+id/tv_borrow_money_type_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#898989"
            android:text="二手车分期贷款"/>
        <TextView
            android:padding="5dp"
            android:id="@+id/tv_borrow_money_type_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#898989"
            android:text="新车分期贷款"/>
    </LinearLayout>
</RelativeLayout>