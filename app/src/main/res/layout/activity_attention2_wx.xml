<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/activity_attention2_wx"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/header"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/attention_wx_bg1"/>
            <LinearLayout
                android:background="#4179c3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#C4DFFD"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/attention_wx_bg2"/>
                    <LinearLayout
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/attention_wx_bg1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/attention_wx_dyh"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:textColor="#535353"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关注订阅号"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:textColor="#898989"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="微信投资随心理财"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@mipmap/line"/>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/attention_wx_fwh"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:textColor="#535353"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关注订阅号"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:textColor="#898989"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="了解最新喜袋网动态"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/attention_wx_bg3"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:paddingBottom="30dp"
                            android:paddingLeft="50dp"
                            android:paddingRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:paddingTop="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/attention_wx_bg1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_step_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="打开微信,点击右上角的,再点击"/>
                            <LinearLayout
                                android:layout_marginTop="30dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="13sp"
                                    android:textColor="#898989"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="在搜索框输入"/>
                                <TextView
                                    android:textSize="13sp"
                                    android:textColor="#313131"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="“喜袋网”"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/attention_wx_bg4"/>
                            <TextView
                                android:layout_marginTop="30dp"
                                android:textSize="13sp"
                                android:textColor="#898989"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="点击“关注”进入公众号"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/attention_wx_step1"/>
                        <ImageView
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="80dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/attention_wx_step2"/>
                        <ImageView
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="335dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/attention_wx_step3"/>
                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/attention_wx_bg5"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
