<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/activity_invite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/yqyl_bg1"/>
            <LinearLayout
                android:background="#ffcb5d"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/index_top_shape"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingTop="15dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="三重好礼"/>
                    <TextView
                        android:id="@+id/tv_lookDetail"
                        android:paddingTop="10dp"
                        android:textSize="@dimen/ps"
                        android:gravity="center"
                        android:textColor="#ff350d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="查看详情"/>
                    <View
                        android:layout_marginTop="-2dp"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="0.1dp"
                        android:background="#ff380d"/>
                    <LinearLayout
                        android:paddingTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_award1"
                            android:layout_marginLeft="13dp"
                            android:src="@mipmap/award1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/iv_award2"
                            android:layout_marginLeft="44dp"
                            android:src="@mipmap/award2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/iv_award3"
                            android:layout_marginLeft="32dp"
                            android:src="@mipmap/award3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/black2"
                            android:layout_weight="0.8"
                            android:text="50元现金"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/black2"
                            android:gravity="center"
                            android:text="20%投资收益"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/black2"
                            android:gravity="center"
                            android:text="6‰佣金"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:layout_marginTop="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/yqyl_bg3"/>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/yqyl_bg4"
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/yqyl_bg4"/>
                        <TextView
                            android:textColor="@color/gray3"
                            android:textSize="11sp"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/yqyl_bg4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12333****6获得50元现金奖励"/>
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_invite"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/index_yqyl_btn_shape"
                    android:layout_width="284dp"
                    android:layout_height="45dp"
                    android:text="立即邀请"/>

                <ImageView
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yqyl_bg2"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="邀请记录"/>
                <LinearLayout
                    android:id="@+id/ll_yqjl"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="@dimen/ps"
                            android:textColor="@color/black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="邀请用户"/>
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="@dimen/ps"
                            android:textColor="@color/black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="注册时间"/>
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="@dimen/ps"
                            android:textColor="@color/black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="现金奖励"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#dcdcdc"
                        />
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="@dimen/ps"
                            android:textColor="@color/gray3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="123*****122"/>
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="@dimen/ps"
                            android:textColor="@color/gray3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="2017-10-11"/>
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="@dimen/ps"
                            android:textColor="#ff380d"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="10.00元"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_yqjl"
                    android:visibility="visible"
                    android:layout_marginTop="55dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yqyl_bg5"/>
                <TextView
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="45dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/gray3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="在法律许可的范围内,本活动最终解释权归喜袋网所有"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
