<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="17dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/red_packet_usable_bg_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="4dp"
                android:layout_height="108dp"
                android:background="@drawable/red_packet_used_red_line"/>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="108dp">
            <TextView
                android:id="@+id/tv_title"
                android:textSize="12sp"
                android:layout_marginTop="11dp"
                android:textColor="@color/black1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.3元现金红包"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/gray3"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"/>
                <TextView
                    android:id="@+id/tv_value"
                    android:textSize="40sp"
                    android:textColor="@color/gray3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.3"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_duration"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="@color/gray3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期:2017.10.20-2018.01.11"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_use"
            android:background="@drawable/red_packet_used_btn_shape"
            android:layout_marginTop="25dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="使用"/>
    </RelativeLayout>
</LinearLayout>