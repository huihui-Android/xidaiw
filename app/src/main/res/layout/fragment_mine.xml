<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        >
        <ScrollView
            android:id="@+id/sv_mine"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp">
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_avanty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/avanty"/>
                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@+id/iv_avanty"
                            android:layout_marginLeft="11dp"
                            android:textSize="15sp"
                            android:textColor="@color/black1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="立即登录 >"/>
                        <ImageView
                            android:id="@+id/iv_help"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/help"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/account_bg"
                        android:layout_width="match_parent"
                        android:layout_height="147dp">
                        <TextView
                            android:layout_marginTop="15dp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昨日收益(元)"/>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_yesterdayEarn1"
                                android:textColor="@color/white"
                                android:textSize="36sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"/>
                            <TextView
                                android:id="@+id/tv_yesterdayEarn2"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=".00"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_detail"
                            android:layout_marginTop="5dp"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看详情 >"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textColor="@color/gray3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="可用余额(元)"/>
                        <TextView
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textColor="@color/gray3"
                            android:layout_marginLeft="30dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="总资产(元)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_availableBalance"
                            android:layout_weight="1"
                            android:textSize="@dimen/title"
                            android:textColor="@color/black1"
                            android:layout_width="0dp"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            android:text="0.00"/>
                        <TextView
                            android:id="@+id/tv_totalBalance"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/title"
                            android:textColor="@color/black1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="0.00"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:id="@+id/btn_widthdraw"
                            android:textSize="15sp"
                            android:textColor="@color/primary"
                            android:background="@drawable/btn_withdraw_shape"
                            android:layout_width="134dp"
                            android:layout_height="34dp"
                            android:text="提现"/>
                        <Button
                            android:id="@+id/btn_recharge"
                            android:layout_marginLeft="55dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="@drawable/btn_charge_shape"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_width="134dp"
                            android:layout_height="34dp"
                            android:text="充值"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingTop="25dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll_myjl"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:paddingTop="5dp"
                                    android:paddingLeft="38dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/account_dot"/>
                                <TextView
                                    android:paddingLeft="10dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的奖励"/>
                            </LinearLayout>
                            <TextView
                                android:paddingTop="13dp"
                                android:paddingLeft="40dp"
                                android:textSize="13sp"
                                android:textColor="@color/gray1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="红包、代金券"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/line"/>
                        <LinearLayout
                            android:id="@+id/ll_autobid"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:paddingLeft="35dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:paddingTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/account_dot"/>
                                <TextView
                                    android:textSize="15sp"
                                    android:paddingLeft="10dp"
                                    android:textColor="@color/black1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的投资"/>
                            </LinearLayout>
                            <TextView
                                android:paddingLeft="2dp"
                                android:textSize="13sp"
                                android:paddingTop="13dp"
                                android:textColor="@color/gray1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投资、交易明细"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/graygray"
                        />
                    <LinearLayout
                        android:paddingTop="25dp"
                        android:paddingBottom="25dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll_safety"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:paddingTop="5dp"
                                    android:paddingLeft="38dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/account_dot"/>
                                <TextView
                                    android:paddingLeft="10dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="安全中心"/>
                            </LinearLayout>
                            <TextView
                                android:paddingTop="13dp"
                                android:paddingLeft="40dp"
                                android:textSize="13sp"
                                android:textColor="@color/gray1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="密码、银行卡等"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/line"/>
                        <LinearLayout
                            android:id="@+id/ll_myinvit"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:paddingLeft="35dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:paddingTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/account_dot"/>
                                <TextView
                                    android:textSize="15sp"
                                    android:paddingLeft="10dp"
                                    android:textColor="@color/black1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的邀请"/>
                            </LinearLayout>
                            <TextView
                                android:paddingLeft="2dp"
                                android:textSize="13sp"
                                android:paddingTop="13dp"
                                android:textColor="@color/gray1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="查看佣金收益"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:paddingTop="30dp"
                    android:paddingBottom="28dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bottom"/>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rlLogin"
            android:background="#55000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="100dp">
                <Button
                    android:clickable="true"
                    android:id="@+id/btn_login"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:background="@drawable/login_regist"
                    android:layout_width="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="40dp"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:text="登录/注册"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
