<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xidaiw.btj">

    <!-- Required  一些系统要求的权限，如访问网络等 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.bbuwin.mobile.app.permission.JPUSH_MESSAGE" />
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- Optional for location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- app请求联网的权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 判断网络状态权限 -->
    <!-- 添加可以向外拨打电话的权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 手机震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- SD卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:name="btj.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon150x150"
        android:label="喜袋网_原生"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="btj.index.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="btj.mine.activity.LoginActivity" />
        <activity android:name="btj.mine.activity.SafeCenterActivity" />
        <activity android:name="btj.mine.activity.CertificationActivity" />
        <activity android:name="btj.mine.activity.CertificateAfterActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="btj.mine.activity.BindBankCardActivity" />
        <activity android:name="btj.mine.activity.ForgetPasswordActivity" />
        <activity android:name="btj.mine.activity.EditPasswordActivity" />
        <activity android:name="btj.mine.activity.ResetPasswordActivity" />
        <activity android:name="btj.mine.activity.EditPayPasswordActivity" />
        <activity android:name="btj.mine.activity.ResetPayPasswordActivity" />
        <activity android:name="btj.mine.activity.ForgetPayPasswordActivity" />
        <activity android:name="btj.index.activity.BannerViewActivity" />
        <activity android:name="btj.index.activity.InviteAwardActivity" />
        <!-- 这是QQ分享添加的两个AuthActivity和AssistActivity -->
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1106268541" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- 微信分享 -->
        <activity
            android:name="btj.wxapi.WXEntryActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen.Translucent" />
        <activity android:name="btj.index.activity.NewhandGuideActivity" />
        <activity android:name="btj.index.activity.MessageCenter" />
        <activity android:name="btj.index.activity.SiginActivity" />
        <activity android:name="btj.index.activity.AwardDetailActivity"></activity>
    </application>

</manifest>